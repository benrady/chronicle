#!/bin/bash

pdf=$1
name=`basename $pdf .pdf`

if [[ ! -e $pdf ]]; then
  echo "Usage: $0 scenario_pdf"
  exit 1
fi

echo "Extracting chronicle sheet..."
page_count=`docsplit length $pdf`
docsplit images -d 300 -p $page_count $pdf
mv $name*.png chronicle_sheet.png

